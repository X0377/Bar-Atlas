<div id="<%= dom_id bar %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= bar.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Address:</strong>
    <%= bar.address %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Price range:</strong>
    <%= bar.price_range %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Smoking status:</strong>
    <%= bar.smoking_status %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= bar.description %>
  </div>
</div>
