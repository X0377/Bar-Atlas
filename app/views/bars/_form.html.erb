<%= form_with(model: bar, class: "contents") do |form| %>
  <% if bar.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(bar.errors.count, "error") %> prohibited this bar from being saved:</h2>

      <ul class="list-disc ml-6">
        <% bar.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": bar.errors[:name].none?, "border-red-400 focus:outline-red-600": bar.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :address %>
    <%= form.text_field :address, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": bar.errors[:address].none?, "border-red-400 focus:outline-red-600": bar.errors[:address].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :price_range %>
    <%= form.text_field :price_range, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": bar.errors[:price_range].none?, "border-red-400 focus:outline-red-600": bar.errors[:price_range].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :smoking_status %>
    <%= form.text_field :smoking_status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": bar.errors[:smoking_status].none?, "border-red-400 focus:outline-red-600": bar.errors[:smoking_status].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": bar.errors[:description].none?, "border-red-400 focus:outline-red-600": bar.errors[:description].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
