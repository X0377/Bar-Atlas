<div class="flex justify-between items-center mb-8">
  <h2 class="text-3xl font-bold text-navy">おすすめ</h2>
  <div class="flex gap-3 items-center">
    <div class="flex bg-white rounded-xl p-1 shadow-md border border-gray-100">
      <div class="px-4 py-2 text-white rounded-lg text-sm font-semibold cursor-pointer"
           style="background: #722F37;">
        📋 リスト
      </div>
      <div class="px-4 py-2 text-gray-600 rounded-lg text-sm font-semibold cursor-pointer hover:bg-gray-50 transition-colors">
        🗺️ 地図
      </div>
    </div>
    <select class="bg-white border-2 border-gray-200 rounded-xl px-4 py-2 text-sm font-semibold cursor-pointer transition-colors text-navy">
      <option>おすすめ順</option>
      <option>評価順</option>
      <option>距離順</option>
      <option>価格順</option>
    </select>
  </div>
</div>
<div class="bar-grid">
  <% @bars.each do |bar| %>
    <div class="bar-card">
      <div class="bar-card-header">
        <div class="bar-card-header-content">
          <div>
            <h3 class="bar-card-title"><%= bar.name %></h3>
            <div class="bar-card-address">📍 <%= bar.address %></div>
          </div>
          <div class="bar-card-tags">
            <div class="status-tag">営業中</div>
            <div class="rating-tag">⭐ 4.9</div>
          </div>
        </div>
      </div>
      <div class="bar-card-body">
        <div class="specialty-tags-container">
          <% bar.specialties.each do |specialty| %>
            <span class="specialty-tag">
              <%= specialty.category %>
            </span>
          <% end %>
        </div>
        <div class="info-grid">
          <div class="info-item">
            <span class="text-base">💰</span>
            <span><%= bar.price_range %></span>
          </div>
          <div class="info-item">
            <span class="text-base">🕒</span>
            <span>17:00-翌3:00</span>
          </div>
          <div class="info-item">
            <span class="text-base">👥</span>
            <span>25年の実績</span>
          </div>
          <div class="info-item">
            <span class="text-base">📞</span>
            <span>予約可能</span>
          </div>
        </div>
        <div class="card-actions">
          <%= link_to "詳細を見る", bar_path(bar), class: "detail-button" %>
          <button class="favorite-button">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>
