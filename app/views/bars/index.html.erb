<div class="hero-section">
  <div class="hero-content">
    <h1 class="hero-title">
      <span class="accent-gold">酔い</span>の<span class="accent-wine">地図帳</span>
    </h1>
    <p class="hero-subtitle">
      今日はどこで酔う？
    </p>
    <%= search_form_for @q, local: true, class: "search-form" do |f| %>
      <div class="search-container">
        <div class="search-input-wrapper">
          <%= f.search_field :name_or_address_cont,
              placeholder: "バー名・エリアで検索...",
              class: "search-input" %>
        </div>
        <div class="search-button-wrapper">
          <%= f.submit "検索", class: "search-button" %>
        </div>
      </div>
      <div class="quick-filters">
        <%= link_to "🥃 ウイスキー", bars_path(q: { specialties_category_cont: "ウイスキー" }),
            class: "filter-button" %>
        <%= link_to "🍸 カクテル", bars_path(q: { specialties_category_cont: "カクテル" }),
            class: "filter-button" %>
        <%= link_to "🍾 シャンパン", bars_path(q: { specialties_category_cont: "シャンパン" }),
            class: "filter-button" %>
        <%= link_to "🍷 ワイン", bars_path(q: { specialties_category_cont: "ワイン" }),
            class: "filter-button" %>
      </div>
    <% end %>
    <div class="scroll-indicator">
      <svg class="scroll-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</div>
<div class="results-section">
  <div class="results-container">
    <!-- バー表示など今後記述 -->
  </div>
</div>
